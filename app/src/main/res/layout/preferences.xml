<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="13dp"
        android:gravity="center|left"
        android:background="#3434FF">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BackButton"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/exit"
            android:backgroundTint="#FFFFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="환경설정"
            android:textSize="17dp"
            android:textColor="#FFFFFFFF"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_style1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/TextView_AllTimer_Off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모든알림 끄기"
                        android:textColor="#000000"
                        android:textSize="18dp" />


                    <Switch
                        android:id="@+id/Switch_AllTimer_Off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="50dp"
                    android:text="모든 알림을 차단합니다."
                    android:textColor="#838383"
                    android:textSize="15dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_style1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/TextView_AutoTableMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="태블릿 모드 자동전환"
                        android:textColor="#000000"
                        android:textSize="18dp" />


                    <Switch
                        android:id="@+id/Switch_AutoTableMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="50dp"
                    android:text="태블릿 또는 폴더블 디바이스의 경우 리스트 레이아웃이 병렬로 자동전환 됩니다."
                    android:textColor="#838383"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_style1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/TextView_BatteryLow_Notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="배터리 잔량 10% 이하 알림"
                        android:textColor="#000000"
                        android:textSize="18dp" />


                    <Switch
                        android:id="@+id/Switch_BatteryLow_Notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="50dp"
                    android:text="배터리 부족으로 기기의 전원이 꺼져 알림을 받지 못할수 있기에 사전에 알림을 보냅니다."
                    android:textColor="#838383"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_style1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/TextView_Wear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="웨어러블 기기 동기화"
                        android:textColor="#000000"
                        android:textSize="18dp" />


                    <Switch
                        android:id="@+id/Switch_Wear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="50dp"
                    android:text="스마트워치 앱과 연결되어 워치로 알림을 받고 일정을 확인할 수 있습니다."
                    android:textColor="#838383"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_style1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/TextView_AllDataDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모든알람 삭제"
                        android:textColor="#FF0000"
                        android:textSize="18dp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="50dp"
                    android:text="저장된 모든 알람을 삭제합니다."
                    android:textColor="#838383"
                    android:textSize="15dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>